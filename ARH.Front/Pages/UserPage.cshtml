<form method="post">
    @{
    var userNames = Enum.GetValues(typeof(UserName)).Cast<UserName>()
                        .Select(e => new SelectListItem() { Value = e.ToString(), Text = e.ToString() })
                        .ToList();
    userNames.Add(new SelectListItem() { Value = Model.Index.CurrentCalendar.UserName.ToString(), Text = Model.Index.CurrentCalendar.UserName.ToString() });
}
@Html.DropDownListFor(x => x.SelectedName, new SelectList(userNames, "Value", "Text"), new {  @name = "SelectedName" })





 @{
    
